{% extends 'partials/base.html.twig' %}
{% block content %}	
	<div class="page-contacts">	    
		{{ page.content }}
		<p class="phone">{{ page.header.telefone }}</p>
		<p class="email">{{ page.header.email }}</p>

		<form id="contact-form" class="col-sm-6 col-md-offset-1 scrollimation fade-left d3 in" action="submit.php" method="post" novalidate="">
			<div class="form-group">
			    <label class="control-label" for="contact-name">Name</label>
			    <input id="contact-name" name="contactName" placeholder="Your name" class="form-control requiredField" 
			    data-new-placeholder="Your name" type="text" data-error-empty="Please enter your name">
			</div>

			<div class="form-group">
			    <label class="control-label" for="contact-mail">Email</label>
			    <input id="contact-mail" name="email" placeholder="Your email" class="form-control requiredField" 
			    data-new-placeholder="Your email" type="email" data-error-empty="Please enter your email" 
			    data-error-invalid="Invalid email address">
		   	</div>

		    <div class="form-group">
			    <label class="control-label" for="contact-message">Message</label>
			    <textarea id="contact-message" name="comments" placeholder="Your message" class="form-control requiredField" 
			    data-new-placeholder="Your message" rows="6" data-error-empty="Please enter your message"></textarea>
   			</div>

		    <p>
		        <button name="submit" type="submit" data-error-message="Error!" data-sending-message="Sending..." 
		        data-ok-message="Message Sent">Send Message</button>
		    </p>
		    <input type="hidden" name="submitted" id="submitted" value="true">
		</form>

	</div>
{% endblock %}